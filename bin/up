#!/bin/bash
basedir=$(dirname "$0")/..

prefix='\n\033[1;37m'
suffix='\033[0m\n'
echo -e ${prefix}Starting mutagen daemon...$suffix
mutagen daemon start
echo -e ${prefix}The mutagen daemon will stay running until you stop it manually with \`mutagen daemon stop\`.$suffix

echo -e ${prefix}Running mutagen-compose...$suffix

if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    IP_ADDR=$(hostname -i | cut -f1)
elif [[ "$OSTYPE" == "darwin"* ]]; then
    IP_ADDR=$(ipconfig getifaddr en1)
    if [[ -z "$IP_ADDR" ]]; then
      IP_ADDR=$(ipconfig getifaddr en0)
    fi
fi
PRIVATE_NETWORK_IP=${IP_ADDR} mutagen-compose -f "$basedir"/docker-compose.yml up --build --detach
